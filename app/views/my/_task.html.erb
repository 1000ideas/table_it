<div id="issue-topbar">
  <div id="id-subject">
    <div id="issue-id">
      <h2>ID</h2>
      <p><%= issue.id %></p>
    </div>
    <div id="issue-subject">
      <h2><%= l('field_subject') %></h2>
      <p><%= issue.subject %></p>
    </div>
  </div>
  <div id="stop-work">
    <div class="stop-time"></div>
    <p id="time">
      <span><%= l('my.overall_time') %></span>
      <span id="time-count"></span>
    </p>
  </div>
</div>
<div id="issue-desc">
  <h2><%= l('field_description') %></h2>
  <%= raw issue.description %>
</div>
<% if note %>
<div id="latest-com">
  <h2><%= l('my.latest_comment') %></h2>
  <p><%= raw note.notes %></p>
  <span><%= authoring(note.created_on, note.user) %></span>
</div>
<% end %>
