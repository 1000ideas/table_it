<p>
  <%= form_tag "/", :method=>:get  do%>
    Filtr by:
	<% if params[:filter] && params[:filter][:project] %>
    	<%=select_tag "filter[project]", options_for_select([""]+@projects.collect{|p| [p.name, p.id]}, params[:filter][:project]) %>
	<% else %>
		<%=select_tag "filter[project]", options_for_select([""]+@projects.collect{|p| [p.name, p.id]}) %>
  	<% end %>
    
	
	<% users = User.all.collect {|m| [m.name, m.id] if m.type=='User' && m.status==1 && m.active?}.compact! %>
		<% if params[:filter] && params[:filter][:user] %>
      		<%=select_tag "filter[user]", options_for_select(users, params[:filter][:user]), :include_blank => true%>
		<% else %>
      		<%=select_tag "filter[user]", options_for_select(users), :include_blank => true%>
		<% end %>
	<%if User.current.admin?%>	
    <%=label_tag 'filter[admin]', l(:user_view)%><%= check_box_tag 'filter[admin]', 1, (params[:filter] and params[:filter][:admin].blank?) ? false : true%>
    <%end%>
    <%=submit_tag l(:filtr)%>
	<%= link_to "wyczyÅ›Ä‡", home_path %>
  <%end%>
</p>